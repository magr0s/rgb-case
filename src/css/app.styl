// app global css
@import url('https://fonts.googleapis.com/css?family=Ubuntu:300&display=swap&subset=cyrillic');

@font-face
  font-family 'Akrobat-Bold'
  src url(./fonts/Akrobat_Bold.ttf)

.ubuntu-light-font
  font-family 'Ubuntu', sans-serif
  font-weight 300

*
  letter-spacing .1em

.wrap
  max-width: 1140px
  width 100%
  margin-left auto
  margin-right auto

.q-focus-helper
  background transparent !important

.link--hovered:hover
  color $primary
  text-decoration underline

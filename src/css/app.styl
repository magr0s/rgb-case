// app global css
@import url('https://fonts.googleapis.com/css?family=Ubuntu:300&display=swap&subset=cyrillic');

@font-face
  font-family 'Akrobat-Bold'
  src url(./fonts/Akrobat_Bold.ttf)

.ubuntu-light-font
  font-family 'Ubuntu', sans-serif
  font-weight 300
  letter-spacing normal

*
  letter-spacing .1em

.wrap
  max-width: 1140px
  width 100%
  margin-left auto
  margin-right auto

.q-focus-helper
  background transparent !important

.link--hovered
  color $primary
  text-decoration underline

.btn--hovered
  box-shadow 5px 9px 15px 0px rgba(0, 99, 217, 0.3)
  background-color #17a4fd !important
  color white !important
  border-color #17a4fd !important

.img--hovered-dark
  .q-img__image
    &:after
      content: ''
      position absolute
      top: 0
      left 0
      width 100%
      height 100%
      background-color rgba(0,0,0,.5)

.img--hovered-light
  .q-img__image
    &:after
      content: ''
      position absolute
      top: 0
      left 0
      width 100%
      height 100%
      background-color rgba(255,255,255,.5)
